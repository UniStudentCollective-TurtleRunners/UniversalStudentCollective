extends layout_navigation

block content
    .container
          .col-md-8
            // Tabs
            .tab-v1
              ul.nav.nav-tabs
                li.active
                  a(href='#tab-1', data-toggle='tab', aria-expanded='true') Get a Ride
                li
                  a(href='#tab-2', data-toggle='tab', aria-expanded='false') Give a Ride
              .tab-content(style='border:solid 1px #ddd; border-radius: 4px;')
                // Tab 1 Content
                #tab-1.tab-pane.fade.active.in
                  form(action='')
                    fieldset
                      section.col.col-4.pet
                        .row.pet
                          .col.col-lg-6.col-md-6.col-sm-6
                            h4(style='display:block;') My Location
                            input.petform(type='text', placeholder='Address')
                      section.col.col-4.pet
                        .row.pet
                          .col.col-lg-6.col-md-6.col-sm-6
                            h4(style='display:block;') My Destination
                            input.petform(type='text', placeholder='Address')
                          .col.col-lg-6.col-md-6.col-sm-6
                            button.btn.btn-primary.btn-lg(type='button')
                              span.glyphicon.glyphicon-search
                              |  Go!
                // End Tab 1 Content
                // Tab 2 Content
                #tab-2.tab-pane.fade
                  form(action='')
                    fieldset
                      section.col.col-4.pet
                        .row.pet
                          .col.col-lg-6.col-md-6.col-sm-6
                            h4(style='display:block;') My Location
                            input.petform(type='text', placeholder='Address')
                      section.col.col-4.pet
                        .row.pet
                          .col.col-lg-6.col-md-6.col-sm-6
                            h4(style='display:block;') I can pick up within
                            button.btn.btn-default.btn-md(type='button') 1 mile
                            button.btn.btn-default.btn-md(type='button') 3 miles
                            button.btn.btn-default.btn-md(type='button') 5 miles
                            button.btn.btn-default.btn-md(type='button') Any
                            h4(style='display:block;') From my
                            .btn-group.btn-group-sm(role='group')
                              button.btn.btn-default(type='button') Home
                              button.btn.btn-default(type='button') Destination
                          button.btn.btn-primary.btn-lg(type='button')
                            span.glyphicon.glyphicon-search
                            |  Go!
                          // /.row
                // End Tab 2 Content
                //
                  Tab 3 Content
                  <div class="tab-pane fade" id="tab-3">
                  <p>Tab 3 Data Here </p>
                  </div>
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
